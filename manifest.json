{
  "manifest_version": 2,

  "name": "CallibriHelper",
  "description": "Помощник менеджера Колибри",
  "version": "0.1",

  "permissions": [
    "activeTab",
    "https://api.domain.com/"
  ],

  "background": {
    "scripts": ["general.js"],
    "persistent": false
  },
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",

  "browser_action": {
    "default_icon": "icon.png",
    "default_title": "Помощник менеджера Колибри",
    "default_popup": "popup.html"
  }
}
